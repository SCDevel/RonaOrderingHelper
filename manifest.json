{
  "manifest_version": 3,
  "name": "Tools",
  "version": "1.0",
  "description": "Tools to HELP with work",
  "background": {
    "service_worker": "scripts/service.js"
  },
  "side_panel": {
    "default_path": "html/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://ecat.rona.ca/*"
      ],
      "js": [
        "scripts/ecat.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://erona.rona.ca/webapp/erona/Disconnect.jsp"
      ],
      "js": [
        "scripts/erona.js"
      ]
    },
    {
      "matches": [
        "*://www.rona.ca/*",
        "*://rona.ca/*"
      ],
      "js": [
        "scripts/rona.js"
      ]
    },
    {
      "matches": [
        "*://*.orgill.ca/*"
      ],
      "js": [
        "scripts/orgill.js"
      ]
    },
    {
      "matches": [
        "*://nanaimo.coastdistributors.com/*"
      ],
      "js": [
        "scripts/coast.js"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "unlimitedStorage",
    "storage",
    "tabs"
  ]
}
